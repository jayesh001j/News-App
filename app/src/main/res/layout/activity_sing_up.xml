<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="24dp"
            android:contentDescription="Logo"
            android:src="@drawable/splayscren" />


        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:hint="Username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:hint="+91 372837 32873"
            android:inputType="phone" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:layout_marginTop="16dp"
            android:hint="Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/role_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/inter_black"
            android:layout_marginStart="20sp"
            android:text="I am a" />

        <RadioGroup
            android:id="@+id/role_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/media_reporter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Media Reporter"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/visitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Visitor" />
        </RadioGroup>

        <Button
            android:id="@+id/sign_up"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2196F3"
            android:text="Sign Up"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20sp"
            android:gravity="center_vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or sign in with"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Email Icon"
                android:src="@drawable/ic_email" />

            <ImageView
                android:id="@+id/google_icon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Google Icon"
                android:src="@drawable/ic_google" />

            <ImageView
                android:id="@+id/facebook_icon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Facebook Icon"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/twitter_icon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Twitter Icon"
                android:src="@drawable/ic_twitter" />

            <ImageView
                android:id="@+id/apple_icon"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:contentDescription="Apple Icon"
                android:src="@drawable/ic_apple" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="By signing up to News24 you are accepting our"
            android:textAlignment="center"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/terms_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms  Conditions"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>